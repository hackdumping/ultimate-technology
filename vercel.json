{
  "version": 2,
  "builds": [
    {
      "src": "UltimateTechnology/wsgi.py",
      "use": "@vercel/python",
      "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.12"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "src": "/(.*)",
      "dest": "UltimateTechnology/wsgi.py"
    }
  ]
}